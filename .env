# Configurações do Banco de Dados
# Substitua com suas credenciais reais do PostgreSQL
DATABASE_URL="postgresql://usuario:senha@localhost:5432/controlflow"

# Chave secreta para JWT (GERE UMA CHAVE ÚNICA!)
JWT_SECRET="sua-chave-secreta-super-segura-aqui-123456789"

# Porta do servidor
PORT=5002

# Configurações do ambiente
NODE_ENV=development

# Configurações do SAP (para integração futura)
SAP_HOST="sap-server.example.com"
SAP_PORT=8000
SAP_CLIENT="100"
SAP_USERNAME="sap_user"
SAP_PASSWORD="sap_password"

# Configurações de upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760

# Configurações de sessão
SESSION_SECRET="sua-chave-secreta-de-sessao-aqui"
